{# templates/films/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Characters - {{ parent() }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1>Character: {{ character.name }}</h1>

                <figure>
                    <blockquote class="blockquote">
                        <p>Gender <strong>{{ character.gender }}</strong></p>
                    </blockquote>
                </figure>

                <hr>

                <h5>Films</h5>
                <ul class="list-group list-group-numbered">
                    {% for film in character.films %}
                        <li class="list-group-item">
                            <a href="{{ path('films_detail', {'id': film.id}) }}">{{ film.title }}</a>
                        </li>
                    {% endfor %}
                </ul>

                {% if character.films|length < 1 %}
                    <div class="alert alert-info">There is not info about films.</div>
                {% endif %}

                <hr>

                <h5>Species</h5>
                <ul class="list-group list-group-numbered">
                    {% for specie in character.species %}
                        <li class="list-group-item">
                            Name <strong>{{ specie.name }}</strong><br>
                            Classification <strong>{{ specie.classification }}</strong><br>
                            Designation <strong>{{ specie.designation }}</strong><br>
                            Skin colors <strong>{{ specie.skinColors }}</strong><br>
                            Hair colors <strong>{{ specie.hairColors }}</strong><br>
                            Eye colors <strong>{{ specie.hairColors }}</strong>
                        </li>
                    {% endfor %}
                </ul>

                {% if character.species|length < 1 %}
                    <div class="alert alert-info">There is not info about species.</div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
