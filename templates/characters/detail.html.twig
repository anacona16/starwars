{# templates/films/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Characters - {{ parent() }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1>Character: {{ character.name }}</h1>

                <figure>
                    <blockquote class="blockquote">
                        <p>Gender <strong>{{ character.gender }}</strong></p>
                    </blockquote>
                </figure>

                <h5>Films</h5>
                <ul class="list-group list-group-flush">
                    {% for film in character.films %}
                        <li class="list-group-item">
                            <a href="{{ path('films_detail', {'id': film.id}) }}">{{ film.title }}</a>
                        </li>
                    {% else %}
                        <li class="list-group-item">There is not info about characters.</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
