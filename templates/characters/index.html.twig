{# templates/films/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Characters - {{ parent() }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1>Characters</h1>

                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Gender</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for character in characters %}
                        <tr>
                            <td>{{ character.name }}</td>
                            <td>{{ character.gender }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="2">Impossible to retrieve the data.</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                {{ knp_pagination_render(characters) }}
            </div>
        </div>
    </div>
{% endblock %}
